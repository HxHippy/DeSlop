{
  "manifest_version": 3,
  "name": "De-Slop",
  "version": "2.4.4",
  "description": "Automatically detects and removes AI-generated slop content from web pages",
  "author": "Kief Studio",
  "homepage_url": "https://kief.studio",
  "permissions": [
    "storage",
    "activeTab",
    "declarativeNetRequest",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["linkedin-fixer.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "linkedin_ad_blocker",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  }
}
